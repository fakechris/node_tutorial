{
  "name": "node-backend-tutorial",
  "version": "1.0.0",
  "description": "Node.js后端开发实战教程",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "NODE_ENV=test jest",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:e2e": "NODE_ENV=test jest tests/e2e",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:comprehensive": "./test-comprehensive.sh",
    "test:database": "./test-database.sh",
    "test:stage7": "./test-stage7.sh",
    "prod": "NODE_ENV=production node src/index.js",
    "build": "echo \"No build step required for Node.js\" && exit 0",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && node -c src/index.js && echo \"✅ Code quality validation passed\"",
    "migrate": "node bin/migrate.js",
    "migrate:up": "node bin/migrate.js migrate:up",
    "migrate:down": "node bin/migrate.js migrate:down",
    "migrate:status": "node bin/migrate.js migrate:status",
    "seed": "node bin/migrate.js seed:up",
    "seed:down": "node bin/migrate.js seed:down",
    "seed:status": "node bin/migrate.js seed:status",
    "db:setup": "node bin/migrate.js db:setup",
    "db:reset": "node bin/migrate.js db:reset --force"
  },
  "keywords": [
    "nodejs",
    "express",
    "backend",
    "tutorial"
  ],
  "author": "Back Tutor",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "commander": "^14.0.0",
    "compression": "^1.8.1",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.2",
    "rotating-file-stream": "^3.2.6",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
