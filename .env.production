# 生产环境配置
NODE_ENV=production

# 服务器配置
PORT=3000
HOST=0.0.0.0

# 数据库配置（生产环境应使用PostgreSQL/MySQL）
# DATABASE_URL=postgresql://username:password@localhost:5432/production_db
# DATABASE_URL=mysql://username:password@localhost:3306/production_db

# SQLite（仅用于演示，生产环境不推荐）
SQLITE_DATABASE_PATH=./database/production.db

# JWT配置
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=warn
LOG_DIR=./logs
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=10

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secure-session-secret-change-in-production

# CORS配置
CORS_ORIGIN=https://yourdomain.com,https://api.yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# 性能配置
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb
COMPRESSION_ENABLED=true

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
PERFORMANCE_SAMPLING_RATE=0.1

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# 邮件配置（如果需要）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password

# 第三方服务（如果需要）
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# 功能开关
FEATURES_DEBUG_PANEL=false
FEATURES_DETAILED_ERRORS=false
FEATURES_SWAGGER_UI=false