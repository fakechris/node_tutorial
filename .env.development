# 开发环境配置
NODE_ENV=development

# 服务器配置
PORT=3000
HOST=localhost

# 数据库配置
SQLITE_DATABASE_PATH=./database/tutorial.db

# JWT配置
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 安全配置
BCRYPT_ROUNDS=8

# CORS配置（开发环境允许所有源）
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*

# 性能配置
REQUEST_TIMEOUT=60000
BODY_LIMIT=10mb
COMPRESSION_ENABLED=false

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_SAMPLING_RATE=1.0

# 缓存配置
CACHE_ENABLED=false
CACHE_TTL=300

# 功能开关（开发环境启用所有调试功能）
FEATURES_DEBUG_PANEL=true
FEATURES_DETAILED_ERRORS=true
FEATURES_SWAGGER_UI=true
FEATURES_HOT_RELOAD=true

# 开发工具
DEV_MOCK_DELAY=0
DEV_AUTO_RESTART=true