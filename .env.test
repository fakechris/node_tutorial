# 测试环境配置
NODE_ENV=test

# 服务器配置
PORT=3001
HOST=localhost

# 数据库配置（测试环境使用内存数据库）
SQLITE_DATABASE_PATH=:memory:
TEST_DATABASE_FORCE_SYNC=true

# JWT配置
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h

# 日志配置（测试环境最小日志）
LOG_LEVEL=error
LOG_DIR=./test-logs
LOG_MAX_SIZE=1MB
LOG_MAX_FILES=1

# 安全配置（测试环境使用较低加密轮数提高速度）
BCRYPT_ROUNDS=4

# 性能配置
REQUEST_TIMEOUT=10000
BODY_LIMIT=1mb
COMPRESSION_ENABLED=false

# 监控配置
MONITORING_ENABLED=false
HEALTH_CHECK_INTERVAL=10000
PERFORMANCE_SAMPLING_RATE=0

# 缓存配置
CACHE_ENABLED=false

# 功能开关
FEATURES_DEBUG_PANEL=false
FEATURES_DETAILED_ERRORS=true
FEATURES_SWAGGER_UI=false

# 测试配置
TEST_TIMEOUT=5000
TEST_PARALLEL=true
TEST_COVERAGE=true